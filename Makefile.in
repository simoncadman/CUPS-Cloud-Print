prefix = $(DESTDIR)@prefix@
srcdir = @srcdir@
INSTALL = @INSTALL@
cupsbackend = ${DESTDIR}@cupsserverpath@/backend/
cupsmodel = ${DESTDIR}@cupsdatapath@/model/
ppdcpath = @ppdcpath@

all: cloudprint.ppd

cloudprint.ppd:
	${ppdcpath} cloudprint.drv  -d .
	
clean:
	rm -f cloudprint.ppd

install: all
	${INSTALL} -D ${srcdir}/submitjob.py ${prefix}/lib/cloudprint-cups/submitjob.py
	${INSTALL} ${srcdir}/config.py ${prefix}/lib/cloudprint-cups/config.py
	${INSTALL} -D -g root -o root -m 700  ${srcdir}/backend.py ${cupsbackend}cloudprint
	${INSTALL} -D ${srcdir}/cloudprint.ppd ${cupsmodel}CloudPrint.ppd
	touch $(DESTDIR)/var/log/cups/cloudprint_log
	chown root:lp $(DESTDIR)/var/log/cups/cloudprint_log
	chmod 660 $(DESTDIR)/var/log/cups/cloudprint_log
